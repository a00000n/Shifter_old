<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:custom="http://schemas.android.com/apk/res-auto"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:layout_centerHorizontal="true"
              android:layout_centerVertical="true"
              android:orientation="vertical"
              android:weightSum="4">

    <alon.com.shifter.views.ShiftLineView
        android:id="@+id/V_SS_SLV_morn"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        custom:shiftType="morning"/>

    <alon.com.shifter.views.ShiftLineView
        android:id="@+id/V_SS_SLV_afr_non"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_weight="1"
        custom:shiftType="after_noon"/>

    <alon.com.shifter.views.ShiftLineView
        android:id="@+id/V_SS_SLV_evening"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_weight="1"
        custom:shiftType="evening"/>

    <alon.com.shifter.views.ShiftLineView
        android:id="@+id/V_SS_SLV_night"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_weight="1"
        custom:shiftType="night"/>
</LinearLayout>