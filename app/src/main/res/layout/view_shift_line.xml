<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:weightSum="8">

    <ToggleButton
        android:id="@+id/V_SL_sat_tgl"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textOff=""
        android:textOn=""/>

    <TextView
        android:id="@+id/V_SL_title_TV"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/V_SL_sun_tgl"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:layout_toEndOf="@+id/V_SL_sun_tgl"
        android:layout_toRightOf="@+id/V_SL_sun_tgl"
        android:gravity="center"
        android:textAppearance="?android:attr/textAppearanceMedium"/>

    <ToggleButton
        android:id="@+id/V_SL_fri_tgl"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_toEndOf="@+id/V_SL_sat_tgl"
        android:layout_toRightOf="@+id/V_SL_sat_tgl"
        android:textOff=""
        android:textOn=""/>

    <ToggleButton
        android:id="@+id/V_SL_thu_tgl"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_toEndOf="@+id/V_SL_fri_tgl"
        android:layout_toRightOf="@+id/V_SL_fri_tgl"
        android:textOff=""
        android:textOn=""/>

    <ToggleButton
        android:id="@+id/V_SL_wed_tgl"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_toEndOf="@+id/V_SL_thu_tgl"
        android:layout_toRightOf="@+id/V_SL_thu_tgl"
        android:textOff=""
        android:textOn=""/>

    <ToggleButton
        android:id="@+id/V_SL_tue_tgl"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_toEndOf="@+id/V_SL_wed_tgl"
        android:layout_toRightOf="@+id/V_SL_wed_tgl"
        android:textOff=""
        android:textOn=""/>

    <ToggleButton
        android:id="@+id/V_SL_mon_tgl"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_toEndOf="@+id/V_SL_tue_tgl"
        android:layout_toRightOf="@+id/V_SL_tue_tgl"
        android:textOff=""
        android:textOn=""/>

    <ToggleButton
        android:id="@+id/V_SL_sun_tgl"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_toEndOf="@+id/V_SL_mon_tgl"
        android:layout_toRightOf="@+id/V_SL_mon_tgl"
        android:textOff=""
        android:textOn=""/>
</RelativeLayout>